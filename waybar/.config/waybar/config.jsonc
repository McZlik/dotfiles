{
  "position": "top",
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  // "modules-right": ["network", "pulseaudio", "battery", "clock", "custom/power"],
  "modules-right": [
    "mpd",
    "pulseaudio",
    // "bluetooth",
    // "network",
    // "keyboard-state",
    "battery",
    "clock",
    "custom/pacman",
    "custom/notification",
    "group/hardware",
    "power-profiles-daemon",
    "tray",
    "custom/power",
  ],
  // Workspaces
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    }
  },
  // Hyprland Window
  "hyprland/window": {
    "format": "{title}",
    "icon": false,
    "rewrite": {
      // "(.*) ‚Äî Mozilla Firefox": "üåé $1",
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true
  },
  "clock": {
    "format": "<span foreground='#f5c2e7'>ÔÄó   </span>{:%a %d %H:%M}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  },
  "battery": {
    "states": {
      "warning": 40,
      "critical": 15
    },
    "format": "<span size='13000' foreground='#a6e3a1'>{icon} </span> {capacity}%",
    "format-warning": "<span size='13000' foreground='#e39d4d'>{icon} </span> {capacity}%",
    "format-critical": "<span size='13000' foreground='#d95d61'>{icon} </span> {capacity}%",
    "format-charging": "<span size='13000' foreground='#B1E3AD'>Ôá¶ </span>{capacity}%",
    "format-plugged": "<span size='13000' foreground='#B1E3AD'>Ôá¶ </span>{capacity}%",
    "format-alt": "<span size='13000' foreground='#B1E3AD'>{icon} </span> {time}",
    "format-full": "<span size='13000' foreground='#B1E3AD'>ÔÄÑ </span>{capacity}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "tooltip-format": "{time}",
    "interval": 5
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´ {signalStrength}%",
    "format-ethernet": "Ôûñ {ipaddr}",
    "format-disconnected": "Not connected", //An empty format will hide the module.
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´ {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "nm-connection-editor"
  },
  "pulseaudio": {
    "format": "{icon}  {volume}%",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö©",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol"
  },
  // Bluetooth
  "bluetooth": {
    // "format-connected": "Connected",
    // "format-disconnected": "disconnected",
    // "format-disabled": "Disabled",
    // "format": "Ôäî {status}",
    // "format-off": "Off",
    // "format-on": "On",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": "x"
  },
  // Keyboard State
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú"
    }
  },
  // System tray
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  // System
  "custom/system": {
    "format": "Óë≥",
    "tooltip": false
  },
  // CPU
  "cpu": {
    "format": "Ôãõ {usage}% ",
    "on-click": "kitty -e top"
  },
  // Memory
  "memory": {
    "format": "Ôî∏ {}% ",
    "on-click": "kitty -e top"
  },
  // Harddisc space used
  "disk": {
    "interval": 30,
    "format": "ÔÇ† {percentage_used}% ",
    "path": "/",
    "on-click": "kitty -e top"
  },
  "hyprland/language": {
    "format": "/ K {short}"
  },
  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false,
  },
  // Idle Inhibator
  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons": {
      "activated": "ÔèÅ",
      "deactivated": "ÔÄ£"
    },
    "on-click-right": "hyprlock"
  },
  // Power Menu
  "custom/power": {
    "format": "ÔÄë",
    "tooltip-format": "Powermenu",
    "tooltip": true,
    "menu": "on-click",
    "menu-file": "~/.config/waybar/power_menu.xml",
    "menu-actions": {
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "hibernate": "systemctl hibernate",
      "lock": "hypridle"
    },
  },
  "custom/pacman": {
    "format": "{}  ÔÜá",
    "return-type": "json",
    "interval": 3600,
    "exec": "~/.config/waybar/scripts/pacman_updates.py",
    "on-click": "kitty -e 'sudo pacman -Syu'; pkill -SIGRTMIN+8 waybar",
    "signal": 8
  },
  "custom/notification": {
    "tooltip": false,
    "format": "{} {icon}",
    "format-icons": {
      "notification": "ÔÉ≥",
      "none": "ÔÉ≥",
      "dnd-notification": "Ôá∂",
      "dnd-none": "Ôá∂"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "sleep 0.1 && swaync-client -d -sw",
    "escape": true
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  // GROUPS
  // Group Hardware
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-hardware",
      "transition-left-to-right": false,
      "click-to-reveal": true
    },
    "modules": [
      "custom/system",
      "disk",
      "cpu",
      "memory"
      // "hyprland/language"
    ]
  },
}